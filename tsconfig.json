{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "alwaysStrict": true,
    "charset": "utf-8",
    "strict": true,
    //"declaration": true,
    //"declarationMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "esModuleInterop": true

  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
